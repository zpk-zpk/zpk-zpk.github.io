/* pages/addAddress/addAddress.wxss */
.addAddress{
  width: 95%;
  margin: 0 auto;
}
.addAddress>view{
  width: 100%;
  padding: 32rpx 0;
  display: flex;
  align-items: center;
  border-bottom:1px solid #e4e3e3 ;
}
.addAddress>view text{
  font-size: 28rpx;
  color: #878787;
  width:134rpx;
  height: 28rpx;
  line-height: 28rpx;
}
.addAddress>view.ipt{
  width: 578rpx;
}
.addAddress>view:nth-child(4){
  align-items: flex-start;
}
.addAddress>view:nth-child(4) .ipt{
  height: 120rpx;
}
.addAddress>view:nth-child(5) .type{
  width: 100rpx;
  padding: 6rpx 0;
  text-align: center;
  border-radius: 24rpx;
  border: 1px solid #878787;
  color: #878787;
  margin-left: 10rpx;
  height: 45rpx;
}
.addAddress>view:nth-child(5) .active{
  border: 1px solid #da1d1d;
  color: #da1d1d;

}
.addAddress>view:nth-child(6){
  justify-content: center;
  align-items: center;
  padding: 0;
  width: 90%;
  height: 80rpx;
  color: white;
  border-radius: 40rpx;
  background: linear-gradient(to top left,#97d2f1,#1296db);
  margin: 50rpx auto;
}
.addAddress>view:nth-child(7){
  justify-content: center;
  align-items: center;
  padding: 0;
  width: 90%;
  height: 80rpx;
  color: white;
  border-radius: 40rpx;
  background: linear-gradient(to top left,#97d2f1,#1296db);
  margin: 50rpx auto;
}

/* 提示 */
.bottom-tips{
  width: 440rpx;
  /* height: 84rpx; */
  padding: 40rpx 0;
  border-radius: 20rpx;
  position: fixed;
  top:calc(50% - 100rpx);
  left: calc(50% - 220rpx);
  z-index: 100;
  background-color: rgba(0, 0, 0,0.7);
}
.bottom-tips image{
  display: block;
  margin: 0 auto;
  width: 80rpx;
  height: 80rpx;
}
.bottom-tips text{
  font-size: 30rpx;
  display: block;
  text-align: center;
  color: white;
}
